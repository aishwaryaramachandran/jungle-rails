<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          <dt>Add a Review:</dt>
          <dd>
            <%= form_for([@product, @new_review]) do |f| %>
            <p><%= f.text_area :description, id: :product_reviews%> </p>
            <p><%= f.select :rating, 1...5, id: :product_reviews %> </p>
            <p><%= f.submit class:'btn btn-primary'%></p>
            <p>
              <%= link_to add_item_cart_path(product_id: @product.id), class: 'btn btn-primary', method: :put do %>
              <%= fa_icon "shopping-cart", text: 'Add' %>
              <% end %>
            </p>
          <% end %>
          </dd>
        </dl>

        <table class="table table-bordered">
          <caption><h4> Reviews </h4></caption>
           <thead>
             <td><h5>Rating</h5></td>
             <td><h5>Name</h5></td>
             <td><h5>Description</h5></td>

           </thead>
           <tbody>
            <% @product.reviews.reverse_each do |item| %>
             <tr>
               <td><%= item.rating %></td>
               <td><%= item.description %></td>
               <td><%= item.user_id %></td>
             </tr>
           <% end %>

          </tbody>
          </table>
      </div>
    </div>

  </article>

</section>


